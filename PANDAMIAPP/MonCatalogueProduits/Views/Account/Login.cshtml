@model GestionProduits.Service.LoginModel
@{
    ViewBag.Title = "Login";

}

<div class="container spacer">

    <form asp-coontroller="Account" asp-action="Login" method="post">
        <div class="form-group">
            @Html.LabelFor(p => p.Email, new { @class = "control-label" })
            @Html.TextBoxFor(p => p.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Password, new { @class = "control-label" })
            @Html.TextBoxFor(p => p.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <button type="submit" value="Login" class="btn btn-primary">Login</button>
        </div>

    </form>
</div>


